{
  "manifest_version": 3,
  "name": "Multi-Site Mobile Viewer",
  "version": "1.0",
  "description": "View multiple websites in mobile view simultaneously",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}